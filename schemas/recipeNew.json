{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/recipe.json",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "category": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "instructions": {
      "type": "string",
      "minLength": 1
    }
  },
  "required": ["title", "category", "instructions"],
  "additionalProperties": false
}
